.view-selector
  height: 6vw
  display: grid;
  grid-template-columns: repeat(3, 1fr)
  background-color: lightgray;
  grid-gap: 1px;
  padding: 1px
  .mat-button-toggle
    color: black
    background-color: white
  .mat-button-toggle-checked
    background-color: #9a2121
    color: white;
  div
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    cursor: pointer;
    transition: 0.2s
    &:hover
      transform: scale(1.3);

.choose-color
  margin-top: 60px;
  font-size: 24px;
  &__selected
    font-size: 14px;
    color: gray;
  &__wrap
    display: grid;
    place-items: center;
.colors
  margin-top: 1em
  ul
    display: flex;
    height: 100%
    list-style: none;
  li
    width: 25px
    height: 25px
    border: 1px solid black
    margin: 2px
  & li:nth-child(1)
    background-color: red
  & li:nth-child(2)
    background-color: gray
  & li:nth-child(3)
    background-color: blue
.checkout
  display: grid;
  grid-template-columns: 1fr 1fr
